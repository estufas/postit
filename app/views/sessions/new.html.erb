<%= render 'shared/content_title', title: 'Log In' %>

<h4>Please log in</h4>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= f.label_tag :username %>
      <%= f.text_field_tag :username, params[:username] || '' %>
    </div> 
    <div class='control-group'>
      <%= f.label_tag :password %>
      <%= f.password_field_tag :password, params[:password] || '' %>
    </div> 
    <%= submit_tag "Login", class: 'btn btn-success' %>
  <% end %>
</div>