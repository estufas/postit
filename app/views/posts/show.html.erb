<%= link_to 'Return to posts', posts_path %>
<h4>You are viewing <%= link_to @post.title, fix_url(@post.url) %></h4>

<%= render @post.categories %>
<br/>
 [<%= link_to 'edit this post', edit_post_path(@post)%>]
<%= render 'shared/content_title', title: @post.title %>

<p> <%= link_to @post.title, fix_url(@post.url) %></p>
<p>
  <%= @post.description %>
</p>


<%= form_for [@post, @comment] do |f| %>
<div class='control-group'>
<%= render 'shared/errors', obj: @comment %>
  <%= f.label :body, 'Leave a comment' %>
  <%= f.text_area :body, rows: 3, class: 'span4' %>
  <br/>
  <%= f.submit "Create Comment", class: "btn btn-primary btn-small" %>
</div>
<% end %>

<h5>Comments:</h5>
<% @post.comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <br/>
    
    by <%= comment.creator.username %> at <%= display_datetime(comment.created_at) %>
</div>
<% end %>
    